<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/btn_N"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="John McDonald"
        android:textColor="#0E0B0B"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Los Angles,CA"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_N"
        tools:ignore="MissingConstraints"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="210dp"
        app:layout_constraintVertical_bias="0.1"

        android:src="@drawable/mcdonald"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_F"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:background="@drawable/corner"
        android:padding="10sp"
        android:text="Follow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_N"
        app:layout_constraintVertical_bias="0.15" />
    <TextView
        android:id="@+id/btn_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/btn_F"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="23dp"
        android:textColor="#0E0D0D"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1256"
        android:textColor="#0E0D0D"
        android:id="@+id/btn_fcu"
        android:textSize="23sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/btn_F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginLeft="150dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txt_abt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="40sp"
        android:textColor="#0E0D0D"
        app:layout_constraintTop_toBottomOf="@id/btn_F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0E0D0D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toBottomOf="@id/txt_abt"
        android:textSize="20sp"
        android:text="Him poetic eye. Searched any remedies. Trial. Was
poverty schemes him he dressing mountains and as surprise haven't
subject and could a entered would in the of be not posts, doing this never publication"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        app:layout_constraintTop_toBottomOf="@+id/btn_34"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        app:layout_constraintTop_toBottomOf="@id/btn_fcu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="155dp"/>
    <ImageView
        android:id="@+id/imggg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/btn_34"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imggg2"/>


    <ImageView
        android:id="@+id/imggg2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mcdonald"
        app:layout_constraintLeft_toRightOf="@id/imggg"
        app:layout_constraintRight_toLeftOf="@id/imggg3"
        app:layout_constraintBaseline_toBaselineOf="@id/imggg" />

    <ImageView
        android:id="@+id/imggg3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@id/imggg2"
        android:src="@drawable/mcdonald"
        app:layout_constraintTop_toBottomOf="@id/btn_fcu"

        app:layout_constraintRight_toRightOf="parent"

        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_social_media"
        android:scaleType="centerInside"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"

        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>