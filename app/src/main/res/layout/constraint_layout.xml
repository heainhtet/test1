<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85FF44"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
android:textSize="40sp"
        android:text="Android Test"
        android:textColor="#001496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_z"
        android:padding="30dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#3A9600"
        android:text="dss"
        android:background="#001496"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/btn_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="center"
        android:background="#F44336"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="150dp"
        android:textColor="#D50909"
        android:background="#001496"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="225 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="150dp"
        android:textColor="#D50909"
        android:background="#001496"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="135 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="150dp"
        android:textColor="#D50909"
        android:background="#001496"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="315 degree"
        app:layout_constraintCircle="@id/btn_center"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="150dp"
        android:textColor="#D50909"
        android:background="#001496"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>